// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://shopify-user:shopify-pass@app1-mysql:3306/shopify?connection_limit=5&socket_timeout"
}

model Session {
  id          String    @id
  shop        String
  state       String
  isOnline    Boolean   @default(false)
  scope       String?
  expires     DateTime?
  accessToken String
  userId      BigInt?
}

model Settings {
  id   String @id
  shop String @unique
}

model Vendor {
  id        String    @id
  shop      String
  name      String
  email     String
  phone     String
  address   String
  city      String
  state     String
  zip       String
  country   String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  products  Product[]
  orders    Order[]
}

model Product {
  id          String      @id
  shop        String
  vendorId    String
  name        String
  description String
  price       Float
  category    String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  vendor      Vendor      @relation(fields: [vendorId], references: [id])
  orderId     String?
  OrderItem   OrderItem[]
}

model Order {
  id        String      @id
  shop      String
  vendorId  String
  quantity  Int
  price     Float
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  vendor    Vendor      @relation(fields: [vendorId], references: [id])
  OrderItem OrderItem[]
}

model OrderItem {
  id        String   @id
  shop      String
  orderId   String
  productId String
  quantity  Int
  price     Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  order     Order    @relation(fields: [orderId], references: [id])
  product   Product  @relation(fields: [productId], references: [id])
}
