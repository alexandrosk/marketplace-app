{% if customer %}
  {% liquid
    render 'customer-page'
    render 'css-variables'

    render 'vite-tag' with 'customerPage.css'
    render 'vite-tag' with 'customerPage.jsx'
  -%}
{% else %}
  Please login to join as a seller.
{% endif %}
{% schema %}
  {
    "name": "t:blocks.customer-page.heading",
    "target": "section",
    "settings": [
      {
        "label": "Join us text",
        "id": "join_us",
        "type": "text",
        "default": "Ready to sell? Join us!"
      },
      {
        "type": "select",
        "id": "auto_approval",
        "label": "Auto approval?",
        "options": [
          {
            "value": "true",
            "label": "Yes"
          },
          {
            "value": "false",
            "label": "No"
          }
        ],
        "default": "true"
      },
      {
        "label": "Text Colors",
        "id": "text_color",
        "type": "color",
        "default": "#000"
      }, {
        "label": "Links Color",
        "id": "link_color",
        "type": "color",
        "default": "#000"
      }, {
        "label": "Button color",
        "id": "button_color",
        "type": "color",
        "default": "#000"
      }, {
        "label": "Button Text color",
        "id": "button_text_color",
        "type": "color",
        "default": "#fff"
      }
    ],
    "enabled_on": {
      "templates": ["customers/account","page"]
    }
  }
{% endschema %}

